package com.example.csc331accountingapp;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class AccountingAppDriver extends Application {
    @Override //when the app starts:
    public void launch(Stage stage) throws Exception {
        //loads FXML 
        Parent root = FXMLLoader.load(getClass().getResource("Accounting_App.fxml"));
        //creates new scene
        Scene scene = new Scene(root);
        stage.setTitle("Accounting App");
        stage.setScene(scene);
        //visibility toggle
        stage.show();
    }
    //launches java fxruntime
    public static void main(String[] args) {
        launch(args);
    }
}
